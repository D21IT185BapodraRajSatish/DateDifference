<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btndate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectDate1"
        android:text="Select First Date" />

    <TextView
        android:id="@+id/selectedate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:text="selected date"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btndate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btndate1"
        android:onClick="selectDate2"
        android:text="Select Second Date" />

    <Button
        android:id="@+id/btncalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btndate2"
        android:layout_centerHorizontal="true"
        android:onClick="btnCalc"
        android:enabled="false"
        android:text="Calculate Difference" />

    <TextView
        android:id="@+id/selectedate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedate1"

        android:layout_alignParentRight="true"
        android:text="selected date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/difference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>